{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-props-no-spreading": "off",
      "max-classes-per-file": "off",
      "no-use-before-define": "off",
      "no-shadow": "off",
      "no-param-reassign": "off"
    }
}
